{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
      		"@factory/*": ["./src/pages/factory/*"],
      		"@components/*": ["./src/pages/factory/components/*"],
      		"@/*": ["./src/*"]
		}
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
